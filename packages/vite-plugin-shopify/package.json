{
    "name": "@fizzlab.io/vite-plugin-shopify",
    "author": "FizzLab, LLC",
    "version": "1.0.0",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "repository": {
        "url": "fizzlab-io/packages",
        "directory": "packages/vite-plugin-shopify"
    },
    "files": [
        "dist",
        "templates"
    ],
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "keywords": [
        "vite",
        "shopify",
        "vite-plugin"
    ],
    "scripts": {
        "dev": "pnpm watch",
        "build": "tsup src/index.ts --dts --format cjs,esm --clean --publicDir",
        "watch": "tsup src/index.ts --dts --format cjs,esm --watch --publicDir",
        "test": "vitest"
    },
    "devDependencies": {
        "@fizzlab.io/tsconfig": "workspace:*",
        "@fizzlab.io/vite-plugin": "workspace:*",
        "@shopify/prettier-plugin-liquid": "1.2.2",
        "@types/js-yaml": "4.0.5",
        "@types/lodash": "4.14.196",
        "prettier": "3.0.0"
    },
    "dependencies": {
        "js-yaml": "4.1.0",
        "lodash": "4.17.21"
    },
    "peerDependencies": {
        "@shopify/prettier-plugin-liquid": "1.2.2",
        "lodash": "4.17.21",
        "prettier": "3.0.0"
    }
